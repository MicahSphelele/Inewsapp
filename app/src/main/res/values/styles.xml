<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_home</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTrans</item>
        <item name="mainBackgroundColor">@color/colorWhite</item>
        <item name="splashTextColor">@color/colorPrimary</item>
        <item name="bottomNavBackgroundColor">@color/colorWhite</item>
        <item name="bottomNavItemTextColor">@color/colorAccent</item>
        <item name="bottomNavItemIconColor">@color/colorPrimary</item>
        <item name="articleCardBackgroundColor">@color/colorWhite</item>
        <item name="articleCardTitleTextColor">@color/colorBlack</item>
        <item name="articleCardSubTitleTextColor">@color/colorPrimary</item>
        <item name="articleCardShareButtonColor">@drawable/btn_share_original</item>
        <item name="covidCardBackgroundColor">@color/colorWhite</item>
        <item name="covidTitleTextColor">@color/colorPrimary</item>
        <item name="covidSubTitleTextColor">@color/colorAccent</item>
        <item name="covidSubTextColor">@color/colorPrimary</item>
        <item name="countryPickerBackgroundColor">@color/colorWhite</item>
        <item name="countryPickerCardBackgroundColor">@color/colorWhite</item>
        <item name="countryPickerTextColor">@color/colorPrimary</item>
        <item name="abCardBackgroundColor">@color/colorWhite</item>
        <item name="abTitleTextColor">@color/colorPrimary</item>
        <item name="abSubTitleTextColor">@color/colorAccent</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_home</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTrans</item>
        <item name="mainBackgroundColor">@color/colorDarkNavy</item>
        <item name="splashTextColor">@color/colorAccent</item>
        <item name="bottomNavBackgroundColor">@color/colorDarkNavy</item>
        <item name="bottomNavItemTextColor">@color/colorAccent</item>
        <item name="bottomNavItemIconColor">@color/colorAccent</item>
        <item name="articleCardBackgroundColor">@color/colorDarkNavy</item>
        <item name="articleCardTitleTextColor">@color/colorWhite</item>
        <item name="articleCardSubTitleTextColor">@color/colorAccent</item>
        <item name="articleCardShareButtonColor">@drawable/btn_share_dark</item>
        <item name="covidCardBackgroundColor">@color/colorDarkNavy</item>
        <item name="covidTitleTextColor">@color/colorAccent</item>
        <item name="covidSubTitleTextColor">@color/colorAccent</item>
        <item name="covidSubTextColor">@color/colorAccent</item>
        <item name="countryPickerBackgroundColor">@color/colorDarkNavy</item>
        <item name="countryPickerCardBackgroundColor">@color/colorDarkNavy</item>
        <item name="countryPickerTextColor">@color/colorAccent</item>
        <item name="abCardBackgroundColor">@color/colorDarkNavy</item>
        <item name="abTitleTextColor">@color/colorAccent</item>
        <item name="abSubTitleTextColor">@color/colorAccent</item>
    </style>

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="WindowAnimationTrans">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">10pt</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="ToolbarSubTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">5pt</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="PopupMenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="ToolBarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#EEEEEE</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/colorWhite</item>
        <!-- Additionally if you want animations when dialog opening -->
        <!--<item name="android:windowEnterAnimation">@android:anim/fade_in</item>-->
        <!--<item name="android:windowExitAnimation">@android:anim/fade_out</item>-->
    </style>

    <style name="FullScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>
